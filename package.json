{
  "name": "next-auth-test",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bun ./scripts/prestart.ts && bun --bun next dev --turbopack",
    "build": "bun --bun next build",
    "start": "bun ./scripts/prestart.ts && bun --bun next start",
    "lint": "bun --bun next lint",
    "db:generate": "bunx --bun drizzle-kit generate --dialect sqlite --casing snake_case --schema ./src/db/schema.ts",
    "db:migrate": "bun ./scripts/migrate.ts",
    "db:seed": "bun ./scripts/seed.ts",
    "db:auth-generate": "bunx --bun @better-auth/cli generate --output ./src/db/schema.auth.ts"
  },
  "dependencies": {
    "better-auth": "^1.2.8",
    "drizzle-orm": "^0.44.1",
    "next": "15.3.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^3.25.51"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/bun": "^1.2.15",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "trustedDependencies": [
    "@tailwindcss/oxide",
    "unrs-resolver"
  ],
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977"
}
